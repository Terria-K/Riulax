<UserControl x:Class="Riulax.Views.HomeView"
            xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:vm="using:Riulax.ViewModels"
            xmlns:i="https://github.com/projektanker/icons.avalonia"
            x:DataType="vm:HomeViewModel"
            d:DesignHeight="450"
            d:DesignWidth="800"
            x:CompileBindings="True"
            mc:Ignorable="d">


    <StackPanel Width="200" Margin="0 20 0 0">
        <Button HorizontalAlignment="Stretch" Background="Transparent">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <i:Icon HorizontalAlignment="Left" Value="fa-solid fa-house"/>
                <TextBlock Text="Home" FontSize="16"/>
            </StackPanel>
        </Button>

        <Button HorizontalAlignment="Stretch" Background="Transparent">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <i:Icon HorizontalAlignment="Left" Value="fa-solid fa-music"/>
                <TextBlock Text="Songs" FontSize="16"/>
            </StackPanel>
        </Button>
    </StackPanel>

</UserControl>